# Build
FROM mcr.microsoft.com/dotnet/sdk:3.1-alpine AS build
WORKDIR /source

COPY . .
RUN dotnet publish -c release -o /app -f netcoreapp3.1 ValMati.Dotnet-grpc-vs-rest.REST/ValMati.Dotnet-grpc-vs-rest.REST.csproj

# Generate image
FROM mcr.microsoft.com/dotnet/aspnet:3.1-alpine

ENV ASPNETCORE_URLS=http://*:9091
WORKDIR /app
COPY --from=build /app .

EXPOSE 9091
 
ENTRYPOINT [ "dotnet", "ValMati.Dotnet-grpc-vs-rest.REST.dll" ]